  let queriesWithTargetsShared : list list (ğ”¹{bgw:A,B} Ã— (â„¤{bgw:A,B} Ã— â„™{bgw:A,B}))
  let queriesWithTargetsShared = fold-f [] (Î» P x i â†’ (preprocess-lists-n-triples P {A,B} 8 x (false,(-1,Dummy))) âˆ· i) queriesWithTargets

