  let queriesWithTargets : (list (ğ”¹{ssec:B} Ã— (â„¤{ssec:B} Ã— â„™{ssec:B}))){isec:B}
  let queriesWithTargets = solo {B} as Î± in (pair-with-list true (pair-with-list inputQueries@Î± inputTargets@Î±))

