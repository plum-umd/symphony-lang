def for_loop s p e f a =
  let for_rec = Î» [for_rec] i acc â†’
    if i < e then
      for_rec (p i) (f i acc)
    else
      acc
  in for_rec s a

def std_for_loop = for_loop 0n (Î» i â†’ i + 1n)

