def eq_array eq_e a1 a2 =
  let sz1 = size a1
  let sz2 = size a2 in
  if sz1 â‰¡ sz2 then
    let eq_rec = Î» [eq_rec] i acc â†’
      if i â‰¡ sz1 then
        acc
      else
        eq_rec (i + 1n) (acc âˆ§ (eq_e a1.i a2.i))
    in eq_rec 0n true
  else
    false

def app_array arrs =
  let n = size arrs in
  let len = Î» [len] i acc â†’
    if i == n then
      acc
    else
      len (i + 1n) (acc + size arrs.i)
  in
  let m = len 0n 0n in
  let r = array[m] âŠ¥ in
  let concat = Î» [concat] i j offset â†’
    if i == n then
      ()
    else
      let c = size arrs.i in
      if j == c then
        concat (i + 1n) 0n (offset + c)
      else
        let a = arrs.i in
        r.(offset + j) â† a.j â–¶
        concat i (j + 1n) offset
  in
  concat 0n 0n 0n â–¶
  r

