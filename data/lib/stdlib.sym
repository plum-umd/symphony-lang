def content-over cond n f xs =
  case xs
  { [] -> []
  ; cell::xs' ->
    let (tag, x) = cell
    let hd =
      mux if (cond && (n == 0) && tag)
           then (tag, f x)
           else cell
    in hd :: content-over cond (n - 1) f xs'
  }


def vec-cond-over cond n f vec =
  let default, xs = vec
