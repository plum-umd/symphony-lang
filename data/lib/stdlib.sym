-- given a swap function for type a, build swap for bool * a
-- def tag-swap : (bool{P} -> a -> a -> a)
--             -> (bool{P} -> bool{P} * a -> bool{P} * a -> bool{P} * a)
def tag-swap swap =
  fun b x y ->
    let tx, x' = x
    let ty, y' = y
    in (b ? tx >< ty), (swap b x' y')


