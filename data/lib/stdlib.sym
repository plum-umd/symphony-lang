-- Produce an array of indexes in range [0..n)
def upTo n =
  let a = array[n] 0n in

  let upToRec = fun [upToRec] i ->
    if i < n then
      let _ = a.i <- i in
      upToRec (i + 1n)
    else ()
  in

  let _ = upToRec 0n in
  a

-- Swap indexes `i` and `j` in array `a`
def swap a i j =
  let tmp = a.i in
  let _   = a.i <- a.j in
  let _   = a.j <- tmp in
  ()

